testclass StatechartEntryExitActions for statechart statechartactions.StatechartEntryAndExitActions {
	
	@Test operation entryActionsAreExecutedOnEnteringStatechart() {
		assert x == 0
		assert y == 0
		b = true
		
		enter

		assert x == 5
		assert y == 3 		
	}
	
	@Test operation entryActionGuardsAreEvaluatedOnEnteringStatechart() {
		assert x == 0
		assert y == 0
		b = false
		
		enter
		
		assert x == 2
		assert y == 3 		
	}

	@Test operation exitActionsAreExecutedOnExitingStatechart() {
		enter
		b = true
				
		exit
		
		assert x == 6
		assert y == 2 		
	}
	
	@Test operation exitActionGuardsAreEvaluatedOnExitingStatechart() {
		enter
		b = false
		
		exit
		
		assert x == 8
		assert y == 2 		
	}
}
