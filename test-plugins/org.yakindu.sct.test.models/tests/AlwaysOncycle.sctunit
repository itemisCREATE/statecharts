testclass AlwaysOncycle for statechart AlwaysOncycle {
	
	@Test
 	operation alwaysOnCycleTest (){
	 	enter
		assert active (AlwaysOncycle.main_region.StateA)
		
		var count : integer = 0
		
		while (count < 5) {
			proceed 1 cycle
			assert active (AlwaysOncycle.main_region.StateA)
			count++
		}
		assert (value == 5)

		proceed 1 cycle
		assert active (AlwaysOncycle.main_region.StateB)
		assert value == 0
		
		count = 0
		while (count < 5) {
			proceed 1 cycle
			assert active (AlwaysOncycle.main_region.StateB)
			count++
		}
		assert (value == 5)
		assert (x == 5)
		assert (y == 5)

		proceed 1 cycle
		assert active (AlwaysOncycle.main_region.StateA)  
		assert value == 0
	}
		
}