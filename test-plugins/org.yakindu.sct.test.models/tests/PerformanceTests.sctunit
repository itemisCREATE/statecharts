
testgroup PerformanceTests for statechart PerformanceTest {
	
	
	test test_100_000 {
				
		enter		
				
		assert active(PerformanceTest.mr.A) 
		
		while [ c < 100000 ] {
			if [active(PerformanceTest.mr.A)] {			
				raise e1
			} else { 
				if [c % 2 == 0] {
					raise e2
				} else {
					raise e3
				}
			}
	 
			cycle						
		}
		
		assert a > 2
	}
	 
	 
