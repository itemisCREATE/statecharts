void «StName()»::_runCycle(Event ev)
{
	for (int i=0; i<MAX_PARALLEL_STATES; ++i) {
		switch(state[i]) {
	«FOREACH this.states AS state»
	    case _«state.simpleName»:
	        cycle_«state.simpleName»(*ev);
	        break;
	«ENDFOREACH»
		default:
			/* no state found */
			break;
		}
	}
}
